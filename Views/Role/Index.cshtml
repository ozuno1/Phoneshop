@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

    <h3>Manage Roles</h3>

<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Emri</th><th>Veprime</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">Nuk ka role</td></tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td class="text-center">
                    <form method="post" asp-controller="Role" asp-action="Delete">
                        <input type="hidden" name="Id" value="@role.Id" />
                        <a class="btn btn-sm btn-primary" asp-controller="Role" asp-route-id="@role.Id" asp-action="ShowEdit">Edit</a>   
                        <button type="submit" class="btn btn-sm btn-primary">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a asp-action="Create" asp-controller="Role" class="btn btn-primary">New Role</a>
   