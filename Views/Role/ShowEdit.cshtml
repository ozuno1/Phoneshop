@model WebApplication1.Models.EditRoleModel
<form method="post" class="mt-3" asp-action="Edit" asp-controller="Role">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" readonly="readonly" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Ruaj</button>
            <a asp-action="Index" class="btn btn-primary">Anulo</a>
        </div>
    </div>
</form>